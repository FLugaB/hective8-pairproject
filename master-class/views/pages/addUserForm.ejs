<!DOCTYPE html>
<html lang="en">
    <head>
    <%- include('../partials/head'); %>
    </head>
    <body onload="loader_page()">

        <%- include('../partials/loader'); %>

        <header>
            <%- include('../partials/header'); %>
        </header>

        <main id="animation-zoom-out">
            <form class="w-50 mx-auto h-50">
                <div class="py-5">
                    <h1 class="text-master font-lato-regular">New User</h1>
                </div>
                <div class="form-group row">
                  <label for="newEmail" class="col-sm-2 col-form-label text-white">Email</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="newEmail" name="newEmail" placeholder="Email">
                  </div>
                </div>
                <div class="form-group row">
                  <label for="newPassword" class="col-sm-2 col-form-label text-white">Password</label>
                  <div class="col-sm-10">
                    <input type="password" class="form-control" id="newPassword" placeholder="Password" name="newPassword">
                  </div>
                </div>
                <button type="submit" class="btn btn-primary mb-2">Sign Up</button>
            </form>
        </main>

        <footer>
            <%- include('../partials/footer'); %>
        </footer>
  
        

    </body>
    <script for="javascript" src="./js/global.js"></script>
</html>