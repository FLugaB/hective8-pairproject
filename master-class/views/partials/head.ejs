<style>
    * {
        padding: 0;
        margin: 0;
        background-color: rgba(30,30,30,255);
    }

    /* Font */
    .font-lato-regualar {
        font-family: "Lato", sans-serif;
        font-weight: 400;
    }



    /* Color */

    .bg-black {
        background-color: rgba(30,30,30,255);
    }

    .text-master {
        color: rgba(239,69,98,255)!important;
    }

    /* Header CSS */
    .navbar-brand {
        max-width: 100px;
    }

    .navbar-brand > img {
        width: 100%;
        height: auto;
    }

    .nav-item > a {
        font-size: 18px;
    }

    /* Loader */
    #loader {
        position: absolute;
        width: 100%;
        height: 100vh;
        z-index: 99999;
        background: #fff;
        display: block;
    }

    .wrapper {
        position: fixed;
        top: 50%;
        right: 50%;
        transform: translate(50%,-50%);
        background-color: #fff;
        display: block;
    }

    #loader span {
        display: inline-block;
        margin-top: 10px;
        height: 20px;
        width: 20px;
        border-radius: 50%;
    }

    #loader span:not(:first-child) {
        margin-left: 10px;
    }

    #loader span:nth-child(1) {
        background: #333;
        animation: move .8s ease-in-out -0.25s infinite alternate;
    }
    #loader span:nth-child(2) {
        background: #333;
        animation: move 0.8s ease-in-out -0.5s infinite alternate;
    }
    #loader span:nth-child(3) {
        background: #333;
        animation: move 0.8s ease-in-out -0.75s infinite alternate;
    }
    #loader span:nth-child(4) {
        background: #333;
        animation: move .8s ease-in-out -1s infinite alternate;
    }

    @keyframes move {
        from {
            transform: translateY(-10px);
        }
        to {
            transform: translateY(5px);
        }
    }

    #animation-zoom-out {
        position: relative;
        -webkit-animation-name: animatezoomout;
        -webkit-animation-duration: 3s;
        animation-name: animatezoomout;
        animation-duration: 3s;
    }
    
    @-webkit-keyframes animatezoomout {
        from {
            transform: scale(2);
            opacity:0;
        }
        to {
            transition: all .1s ease-in-out;
            opacity:1;
        }
    }
    
    @keyframes animatezoomout {
        from{
            transform: scale(2);
            opacity:0;
        }
        to{
            transition: all .2s ease-in-out;
            opacity:1;
        }
    }

    #container {
        margin: auto;
        top: 0;
        bottom: 0;
        filter: url(#threshold) blur(0.6px);
    }

    #text1, #text2 {
        position: absolute;
        width: 100%;
        display: inline-block;
        font-family: 'Raleway', sans-serif;
        font-size: 80pt;
        text-align: center;
        user-select: none;
        color: rgba(239,69,98,255)!important;
    }
</style>